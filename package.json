  "license": "MIT",
  "bugs": {
    "url": "https://github.com/logfirejs/logfire/issues"
  },
  "homepage": "https://github.com/logfirejs/logfire",
  "devDependencies": {
    "coveralls": "~2.10.0",
    "istanbul": "~0.2.10",
    "mocha": "~1.20.0",
    "mocha-lcov-reporter": "0.0.1",
    "should": "~4.0.0",
    "sinon": "^1.10.2",
    "supertest": "~0.13.0",
    "supertest-as-promised": "~0.1.1"
  },
  "dependencies": {
    "bluebird": "^2.0.2",
    "body-parser": "~1.3.0",
    "colors": "~0.6.2",
    "express": "~4.4.1",
    "hiredis": "~0.1.16",
    "longjohn": "~0.2.4",
    "moment": "~2.6.0",
